<?xml version="1.0" encoding="utf-8"?>


<ScrollView

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".result">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/sun"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yellowoutline"
                android:text="Annual"
                android:id="@+id/annualtab"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/monthlytab"
                android:layout_marginLeft="5dp"
                android:background="@drawable/yellowoutline"
                android:text="Monthly"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"/>







        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Ghaziabad, India"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/CircularDeterminateProgressBar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:progress="60" />

            <TextView
                android:id="@+id/text_view_progress"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar"
                app:layout_constraintStart_toStartOf="@+id/progress_bar"
                app:layout_constraintTop_toTopOf="@+id/progress_bar"
                android:gravity="center"
                tools:text="100\nunits/year" />






        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#EDFDFF"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            android:layout_height="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#01453C"
                        android:text="At Max Results"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins"
                        android:textColor="#003A33"
                        android:text="Panels : 6 of 1 watt"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins"
                        android:textColor="#003A33"
                        android:text="At Area : 40 m2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins"
                        android:textColor="#003A33"
                        android:text="1 watt Panel : 6.8m2"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/panels"/>




            </LinearLayout>



        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:id="@+id/janparent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:id="@+id/jan"
                    android:background="#FFD600"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="J"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/febparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:id="@+id/feb"
                    android:background="#AEEA00"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="F"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:id="@+id/marparent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/mar"
                    android:layout_margin="5dp"
                    android:background="#FFAB00"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="M"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/aprparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/apr"
                    android:layout_margin="5dp"
                    android:background="#FF6D00"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="A"/>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/mayparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/may"
                    android:layout_margin="5dp"
                    android:background="#FFD600"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="M"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/junparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/jun"
                    android:layout_margin="5dp"
                    android:background="#FF6D00"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="J"/>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:id="@+id/julparent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/jul"
                    android:layout_margin="5dp"
                    android:background="#FFD600"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="J"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/augparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:id="@+id/aug"
                    android:background="#AEEA00"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="A"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/sepparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/sep"
                    android:layout_margin="5dp"
                    android:background="#FFD600"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="S"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/octparent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/oct"
                    android:layout_margin="5dp"
                    android:background="#FFD600"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="O"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/novparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:id="@+id/nov"
                    android:background="#AEEA00"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="N"/>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="vertical"
                android:id="@+id/decparent"
                android:gravity="bottom"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="5dp"
                    android:id="@+id/dec"
                    android:background="#AEEA00"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="D"/>


            </LinearLayout>



        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_height="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/camera"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View 3D panel"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="3"
                        />





                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/analysebtn"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cost"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Analyse expense"
                        android:textSize="15sp"

                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_weight="3"
                        />





                </LinearLayout>




            </LinearLayout>






        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/farm"
            android:textSize="18sp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/yellowoutline"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/harvest"


            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Farm with Solar!\n(AgriVoltaics)"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"/>




        </LinearLayout>







    </LinearLayout>

</ScrollView>
